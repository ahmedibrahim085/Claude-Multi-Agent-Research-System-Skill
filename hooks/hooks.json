{
    "PostToolUse": [
        {
            "condition": "toolName === 'Task' && args.subagent_type === 'researcher'",
            "hooks": [
                {
                    "type": "log",
                    "message": "ğŸ”¬ Researcher spawned: {{args.description}}"
                }
            ]
        },
        {
            "condition": "toolName === 'Write' && args.file?.includes('reports/')",
            "hooks": [
                {
                    "type": "log",
                    "message": "ğŸ“Š Report generated: {{args.file}}"
                }
            ]
        },
        {
            "condition": "toolName === 'Task' && args.subagent_type === 'report-writer'",
            "hooks": [
                {
                    "type": "log",
                    "message": "ğŸ“ Synthesis started: Report-writer agent activated"
                }
            ]
        }
    ],
    "PreSkillActivation": [
        {
            "condition": "skillName === 'multi-agent-researcher'",
            "hooks": [
                {
                    "type": "command",
                    "command": "New-Item -ItemType Directory -Path 'files/research_notes','files/reports' -Force -ErrorAction SilentlyContinue"
                },
                {
                    "type": "log",
                    "message": "ğŸš€ Multi-agent research skill activated"
                }
            ]
        }
    ]
}